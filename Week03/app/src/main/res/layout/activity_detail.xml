<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher_round" />

    <TextView
        android:id="@+id/coinName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/coinSymbol"
        app:layout_constraintStart_toStartOf="@+id/coinSymbol" />

    <TextView
        android:id="@+id/coinSymbol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintStart_toEndOf="@+id/imageView2" />

    <TextView
        android:id="@+id/titleCoinValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="@string/coinValue"
        app:layout_constraintStart_toStartOf="@+id/imageView2"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <TextView
        android:id="@+id/titleCoinChange1h"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="@string/coinChange1h"
        app:layout_constraintStart_toStartOf="@+id/titleCoinValue"
        app:layout_constraintTop_toBottomOf="@+id/titleCoinValue" />

    <TextView
        android:id="@+id/titleCoinChange24h"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="@string/coinChange24h"
        app:layout_constraintStart_toStartOf="@+id/titleCoinChange1h"
        app:layout_constraintTop_toBottomOf="@+id/titleCoinChange1h" />

    <TextView
        android:id="@+id/titleCoinChange7d"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="@string/coinChange7d"
        app:layout_constraintStart_toStartOf="@+id/titleCoinChange24h"
        app:layout_constraintTop_toBottomOf="@+id/titleCoinChange24h" />

    <TextView
        android:id="@+id/titleCoinMarketcap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="@string/coinMarketcap"
        app:layout_constraintStart_toStartOf="@+id/titleCoinChange7d"
        app:layout_constraintTop_toBottomOf="@+id/titleCoinChange7d" />

    <TextView
        android:id="@+id/titleCoinVolume"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="@string/coinVolume"
        app:layout_constraintStart_toStartOf="@+id/titleCoinMarketcap"
        app:layout_constraintTop_toBottomOf="@+id/titleCoinMarketcap" />

    <TextView
        android:id="@+id/coinValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/titleCoinValue"
        app:layout_constraintStart_toStartOf="@+id/coinSymbol" />

    <TextView
        android:id="@+id/coinChange1h"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/titleCoinChange1h"
        app:layout_constraintStart_toStartOf="@+id/coinValue" />

    <TextView
        android:id="@+id/coinChange24h"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/titleCoinChange24h"
        app:layout_constraintStart_toStartOf="@+id/coinChange1h" />

    <TextView
        android:id="@+id/coinChange7d"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/titleCoinChange7d"
        app:layout_constraintStart_toStartOf="@+id/coinChange24h" />

    <TextView
        android:id="@+id/coinMarketcap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/titleCoinMarketcap"
        app:layout_constraintStart_toStartOf="@+id/coinChange7d" />

    <TextView
        android:id="@+id/coinVolume"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/titleCoinVolume"
        app:layout_constraintStart_toStartOf="@+id/coinMarketcap" />

    <ImageView
        android:id="@+id/searchCoin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView2"
        app:srcCompat="@android:drawable/ic_search_category_default" />

</androidx.constraintlayout.widget.ConstraintLayout>